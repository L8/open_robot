
public class SleepyClientService {
	
	String dataStore = null;
	String data = null;
	
	Object full  = new Object();
    Object empty = new Object();
    
    
    public boolean setString(String newString) {
    	if (dataStore != null) {
    		return false;
    	} 
    	dataStore = newString;
    	dataStore.notify();
    	return true;
    }
    
    public void push(String d) {
        synchronized(full) {
            if (data != null)
				try {
					full.wait();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
        }
        data = d;
        synchronized(empty) {
            if (data != null) empty.notify();
        }
    }
    
    public String pop() {
        synchronized(empty) {
            if (data == null)
				try {
					empty.wait();
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
        }
        String o = data;
        data = null;
        synchronized(full) {
            if (data == null) full.notify();
        }
        return o;
    }
    
    class Producer implements Runnable {
        public void run() {
            while (true) {
            	while (dataStore == null) {
            		System.out.println("DataStore was empty.  Attempting wait....");
            		try {
						dataStore.wait();
					} catch (InterruptedException e) {
						e.printStackTrace();
					}
            	}
                String o = dataStore;
                dataStore = null;
                push(o);
            }
        }
    }
    
    class Consumer implements Runnable {
        public void run() {
            while (true) {
                String o = pop();
                System.out.println("Consumer thread popped object:  " + o);
            }
        }
    }
}

